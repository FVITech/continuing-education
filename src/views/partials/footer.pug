mixin makeFooter(page)
    if page === 'home'
        - var homeActive = 'active'
    if page === 'courses'
        - var coursesActive = 'active'
    footer
        .container
            a(href='index.html')
                img.footer-logo(src='images/fvi-full-white.png', alt='Florida Vocational Institute logo')
            nav.nav.footer-nav
                ul.nav-list
                    li.nav-list-li
                        a.nav-list-li-a(href='index.html', class= homeActive) Home
                    li.nav-list-li
                        a.nav-list-li-a(href='courses.html', class= coursesActive) Courses
                    li.nav-list-li
                        a.contact-btn.nav-list-li-a(href='') Contact
